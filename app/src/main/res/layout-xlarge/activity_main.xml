<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="keung.foodchoice.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Chooice"
        android:id="@+id/textView2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/Check_A"
        android:checked="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/Check_B"
        android:checked="false"
        android:layout_below="@+id/Check_A"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/Check_C"
        android:checked="false"
        android:layout_below="@+id/Check_B"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:clickable="true"
        android:enabled="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/Check_D"
        android:checked="false"
        android:layout_alignTop="@+id/Check_B"
        android:layout_alignRight="@+id/Check_E"
        android:layout_alignEnd="@+id/Check_E" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        android:id="@+id/Check_E"
        android:checked="false"
        android:layout_above="@+id/Check_B"
        android:layout_alignLeft="@+id/btm_choice"
        android:layout_alignStart="@+id/btm_choice" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:id="@+id/Check_G"
        android:checked="false"
        android:layout_alignTop="@+id/Check_D"
        android:layout_toRightOf="@+id/btm_choice"
        android:layout_toEndOf="@+id/btm_choice"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:id="@+id/Check_H"
        android:checked="false"
        android:layout_alignTop="@+id/Check_E"
        android:layout_alignLeft="@+id/Check_G"
        android:layout_alignStart="@+id/Check_G" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/Check_F"
        android:checked="false"
        android:layout_alignTop="@+id/Check_C"
        android:layout_alignRight="@+id/Check_D"
        android:layout_alignEnd="@+id/Check_D" />

    <CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="I"
    android:id="@+id/Check_I"
    android:checked="false"
    android:layout_alignTop="@+id/Check_F"
    android:layout_alignLeft="@+id/Check_H"
    android:layout_alignStart="@+id/Check_H" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自動"
        android:id="@+id/Check_auto"
        android:checked="false"
        android:onClick="autoon"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btm_choice"
        android:text="選擇"
        android:onClick="buttonclick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_answer"
        android:layout_above="@+id/btm_choice"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />
</RelativeLayout>
